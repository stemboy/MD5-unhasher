<ConfigItem>:
    size_hint: 1, None
    height: sp(text_font_size.replace("sp", "")) * 2 + sp(25)

    padding: "10sp"

    FloatLayout:
        pos: self.parent.pos
        size: self.parent.size

        Label:
            id: Title

            pos_hint: {"x": 0, "top": 1}
            size_hint: 0.5, None
            height: text_font_size
            font_size: text_font_size
            text_size: self.size

            text: "Title"
            halign: "left"
            underline: True

        Label:
            id: Description

            pos_hint: {"x": 0, "y": 0}
            size_hint: 0.5, None
            height: text_font_size
            font_size: text_font_size
            text_size: self.size

            text: "Description"
            halign: "left"
            underline: False

        BoxLayout:
            id: EditorHolder

            pos_hint: {"right": 1, "y": 0}
            size_hint: 0.5, None
            height: sp(text_font_size.replace("sp", "")) * 2