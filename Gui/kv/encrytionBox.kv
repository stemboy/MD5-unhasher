<EncryptionBox@BoxLayout>:
    orientation: "vertical"

    Button:
        id: btn

        size_hint_y: None
        height: '48dp'

        text: 'Press'

        on_release: dropdown.open(self)

    DropDown:
        id: dropdown

        on_select: btn.text = '{}'.format(args[1])

        Button:
            size_hint_y: None
            height: '48dp'

            text: "md5"

            on_release: dropdown.select("md5")

        Button:
            size_hint_y: None
            height: '48dp'

            text: "SHA-1"

            on_release: dropdown.select("SHA-1")

