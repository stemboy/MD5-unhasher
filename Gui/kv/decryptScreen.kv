<DecryptScreen>:
    FloatLayout:
        pos_hint: {"y": 0}
        size_hint: 1, 1

        TextInput:
            pos_hint: {"x": 0, "y": 0}
            size_hint: 0.4, 1

            border: (2,2,2,2)

            hint_text: "Encrypted Text"
            font_size: text_font_size

            multiline: False

        TextInput:
            id: DecryptedText

            pos_hint: {"x": 0.6, "y": 0}
            size_hint: 0.4, 1

            border: (2,2,2,2)

            hint_text: "Decrypted Text"
            font_size: text_font_size

        Button:
            pos_hint: {"x":0.4, "y":0.5}
            size_hint: 0.2, 0.1

            border: (10,10,10,10)

            text: "Decrypt"
            font_size: text_font_size

            on_release: root.decrypt()

        EncryptionDropDown:
            id: EncryptionType

            pos_hint: {"x": 0.4, "y":0.4}
            size_hint: 0.2, 0.1