#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<Header@BoxLayout>:
    orientation: "horizontal"

    ToggleButton:
        id: HomeScreenButton
        text: "Home"
        group: "Header"
        state: "down"

        on_state: app.root.header_buttons_selected_change(*args)

    ToggleButton:
        id: HashingScreenButton
        text: "Hashing"
        group: "Header"
        state: "normal"

        on_state: app.root.header_buttons_selected_change(*args)

    ToggleButton:
        id: DecryptScreenButton
        text: "Decrypt"
        group: "Header"
        state: "normal"

        on_state: app.root.header_buttons_selected_change(*args)


<HomeScreen>:
    Header:
        id: Header

        pos_hint: {"top": 1}
        size_hint: 1, 0.1


    Label:
        text: "Home Screen Testing Label"

<HashingScreen>:
    Header:
        id: Header

        pos_hint: {"top": 1}
        size_hint: 1, 0.1


    Label:
        text: "Hashing Screen Testing Label"

<DecryptScreen>:
    Header:
        id: Header

        pos_hint: {"top": 1}
        size_hint: 1, 0.1

    FloatLayout:
        pos_hint: {"y": 0}
        size_hint: 1, 0.9

        TextInput:
            pos_hint: {"x": 0, "y": 0}
            size_hint: 0.4, 1

            border: (2,2,2,2)

            hint_text: "md5 string"
            multiline: False




<ScreenManager>:
    transition: FadeTransition()

    HomeScreen:
        name: "Home"

    HashingScreen:
        name: "Hashing"

    DecryptScreen:
        name: "Decrypt"
