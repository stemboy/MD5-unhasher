#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<Header@BoxLayout>:
    orientation: "horizontal"

    ToggleButton:
        id: HomeScreenButton
        text: "Home"
        group: "Header"
        state: "down"

        on_state: app.root.header_buttons_selected_change(*args)

    ToggleButton:
        id: HashingScreenButton
        text: "Hashing"
        group: "Header"
        state: "normal"

        on_state: app.root.header_buttons_selected_change(*args)

    ToggleButton:
        id: DecryptScreenButton
        text: "Decrypt"
        group: "Header"
        state: "normal"

        on_state: app.root.header_buttons_selected_change(*args)

    ToggleButton:
        id: ConfigScreenButton
        text: "Config"
        group: "Header"
        state: "normal"

        on_state: app.root.header_buttons_selected_change(*args)



<EncryptionBox@BoxLayout>:
    orientation: "vertical"

    Button:
        id: btn
        text: 'Press'
        on_release: dropdown.open(self)
        size_hint_y: None
        height: '48dp'

    DropDown:
        id: dropdown
        on_select: btn.text = '{}'.format(args[1])

        Button:
            text: "md5"
            size_hint_y: None
            height: '48dp'
            on_release: dropdown.select("md5")

        Button:
            text: "SHA-1"
            size_hint_y: None
            height: '48dp'
            on_release: dropdown.select("SHA-1")



<HomeScreen>:
    Header:
        id: Header

        pos_hint: {"top": 1}
        size_hint: 1, 0.1


    Label:
        text: "Welcome! With this program you can mine or decrypt."

<HashingScreen>:
    Header:
        id: Header

        pos_hint: {"top": 1}
        size_hint: 1, 0.1


    FloatLayout:

        pos_hint: {"y": 0}
        size_hint: 1, 0.9

        Button:
            text: "Start Mining"
            pos_hint: {"x": 0,"y": 0.7999}
            size_hint: 0.4, 0.2


<DecryptScreen>:
    Header:
        id: Header

        pos_hint: {"top": 1}
        size_hint: 1, 0.1

    FloatLayout:
        pos_hint: {"y": 0}
        size_hint: 1, 0.9

        EncryptionBox:
            pos_hint: {"x": 0.4, "y":0.4}
            size_hint: 0.2, 0.1


        TextInput:
            pos_hint: {"x": 0, "y": 0}
            size_hint: 0.4, 1



            border: (2,2,2,2)

            hint_text: "Decrypt"

            multiline: False

        TextInput:
            pos_hint: {"x": 0.6, "y": 0}
            size_hint: 0.4, 1

            border: (2,2,2,2)

            hint_text: "Encrypt"

        Button:
            pos_hint: {"x":0.4, "y":0.5}
            size_hint: 0.2, 0.1

            border: (10,10,10,10)

            text: "Activate"

<ConfigScreen>:
    Header:
        id: Header

        pos_hint: {"top": 1}
        size_hint: 1, 0.1

    Settings:
        id: ConfigPanel

        pos_hint: {"y": 0}
        size_hint: 1, 0.9


<ScreenManager>:
    transition: FadeTransition()

    HomeScreen:
        name: "Home"

    HashingScreen:
        name: "Hashing"

    DecryptScreen:
        name: "Decrypt"

    ConfigScreen:
        name: "Config"
